  .mobile-lista
    %ul.mobile-lista
      - @recetas.each do |receta|
        %li
          %a{ :href => receta_path(receta.id, receta.slug) }
            .imagen
              - unless receta.pic_big_file_name.nil?
                = image_tag receta.pic_big.url(:normal)
              - else
                - unless receta.recipe_photo.blank?
                  = image_tag receta.recipe_photo
                - else
                  =image_tag("http://phillybeta.outofthebox.mx/recetas/clasico/#{receta.imagen}.jpg")
            .descripcion
              .titulo
                %h1 
                  = receta.titulo
              .tiempo
                %h2!= "Tiempo de preparaci√≥n:<b> #{receta.tiempo} minutos.</b>"
              .porciones
                %h2!= "Porciones:<b> #{receta.porciones}</b>"
              .platillos
                %h2
                  =image_tag 'mobile/platillo_icon.png', class: 'platillo-icon'
                  = receta.tipo_platillo
  = paginate @recetas
